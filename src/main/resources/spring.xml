<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">


    <context:property-placeholder location="classpath:sport.properties"/>

    <bean id="myFortune"
          class="com.example.demo.HappyFortuneService">
    </bean>

    <bean id="MyCoach"
          class="com.example.demo.TrackCoach">
        <constructor-arg ref="myFortune"/>
    </bean>

    <bean id="coachBean"
    class="com.example.demo.RandomFortuneService">
    </bean>

    <bean id="tennisCoach"
          class="com.example.demo.TennisCoach">
        <constructor-arg ref="coachBean"/>
    </bean>

    <bean id="myCricketCoach"
          class="com.example.demo.CricketCoach">
    <property name="fortuneService" ref="myFortune"/>
        <property name="emailAddress" value="${foo.email}"/>
        <property name="team" value="${foo.team}"/>
    </bean>

</beans>